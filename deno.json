{
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "deno run -A src/index.ts",
    "dev-db": "rm daataabaasaa.db; deno run -A src/db.ts; deno run dev",
    "dev-watch": "deno run -A --watch src/index.ts",
    "dev-db-watch": "rm daataabaasaa.db; deno run -A src/db.ts; deno run dev-watch"
  },
  "imports": {
    "$src/": "./src/",
    "$utils/": "./src/utils/",
    "$static/": "./static/",

    "@db/sqlite": "jsr:@db/sqlite@^0.12.0",
    "@eslint/js": "npm:@eslint/js@^9.39.1",
    "@std/assert": "jsr:@std/assert@^1.0.15",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "discord.js": "npm:discord.js@^14.24.2",
    "fast-average-color-node": "npm:fast-average-color-node@^3.1.0",
    "file-system": "npm:file-system@^2.2.2",
    "fs": "npm:fs@^0.0.1-security",
    "node-emoji": "npm:node-emoji@^2.2.0",
    "path": "npm:path@^0.12.7"
  },
  "lint": {
    "rules": {
      "tags": ["recommended", "jsr"],
      "include": [
        "camelCase",
        "eqeqeq",
        "explicit-function-return-type",
        "no-const-reassign",
        "no-eval"
      ]
    }
  }
}
