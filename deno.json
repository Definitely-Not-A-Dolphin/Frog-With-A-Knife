{
  "nodeModulesDir": "auto",
  "tasks": {
    "prod": "deno run -A src/index.ts",
    "prod-db": "rm daataabaasaa.db; deno run -A src/db.ts; deno run dev",
    "dev": "deno run -A --watch src/index.ts",
    "dev-db": "rm daataabaasaa.db; deno run -A src/db.ts; deno run dev-watch"
  },
  "imports": {
    "$src/": "./src/",

    "@db/sqlite": "jsr:@db/sqlite@^0.13.0",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "discord.js": "npm:discord.js@^14.24.2",
    "fast-average-color-node": "npm:fast-average-color-node@^3.1.0"
  },
  "lint": {
    "rules": {
      "tags": ["recommended", "jsr"],
      "include": [
        "camelCase",
        "eqeqeq",
        "explicit-function-return-type",
        "no-const-reassign",
        "no-eval"
      ]
    }
  },
  "fmt": {
    "bracePosition": "sameLine",
    "singleQuote": false,
    "semiColons": true,
    "operatorPosition": "nextLine",
    "useBraces": "whenNotSingleLine"
  }
}
